@article{wang2025modernismcontemporaryechoes,
  title={Modernism’s Contemporary Echoes: An Interview with Randall Stevenson},
  author={Wang, Bowen and Stevenson, Randall},
  journal={English Studies, online print, 2025, pp. 1-15.},
  abbr={ES},
  year={2025},
  url="https://www.tandfonline.com/doi/full/10.1080/0013838X.2025.2500307",
  selected={true},
  abstract="Bowen Wang interviewed Randall Stevenson on the evolving state of modernist literature and its far-reaching legacies across the twentieth century. Stevenson articulates modernism not merely as an experimental movement but as a sustained interrogation of sociocultural values of its historical moment. The conversation covers a broad spectrum of thematic and critical concerns, including modernism’s dialectical relation with modernity, war representations, gendered narratives, its intersection with new media, and the liminal position within the “intermodernist” transition from late modernism to postmodernism. Through this discussion, the interview reveals the complexities of modernism as both aesthetic and epistemological paradigm, and foregrounds its enduring significance in shaping the trajectory of twentieth-century English literature. It ultimately elicits a reconsideration of modernism’s iterative dialogues with contemporary artistic, historical, and cultural formations"
}

@article{wang2025vitalmodernism,
  title={Vital Modernism: E. E. Cummings’s Still Life, the Quotidian, and Visceral Poetics},
  author={Wang, Bowen},
  journal={Journal of Modern Literature, vol. 48, no. 2, 2025, pp. 112-35.},
  abbr={JML},
  year={2025},
  url="https://muse.jhu.edu/article/955359/figure/fig05",
  selected={true},
  abstract="Among his intermedial enterprises, E. E. Cummings engaged with the genre of still life. Instead of displaying inanimate matters in a traditional manner, the poet-painter transfigured the physically motionless façade of everyday objects into a dynamic and visceral experience of (self-)vitalizing. His aesthetic representation of the quotidian conflates the material and the immaterial as a modernist craft of art-making that recreates a vibrating entanglement of the thingy form, its surroundings, and one's attentive and meditative continuum. Through his verbal-visual experiments, Cummings overrides the distinction between the static and the motile, interiority and exteriority, and art and life, by foregrounding the intrinsic spirit of still life as an evolving desire to be encoded and reconfigured in varying senses and structures. His visceral poetics of reinstating liveness/liveliness from stillness thus provides the reader-viewers with an active way of dialoguing with the corporeal, affective, and imaginary realities that surround them."
}

